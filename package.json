{
  "name": "codacy-markdownlint",
  "description": "Markdownlint Tool for Codacy",
  "keywords": [
    "codacy",
    "markdownlint",
    "markdown",
    "linter",
    "typescript"
  ],
  "homepage": "https://github.com/codacy/codacy-markdownlint#readme",
  "bugs": {
    "url": "https://github.com/codacy/codacy-markdownlint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codacy/codacy-markdownlint.git"
  },
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "directories": {
    "test": "./src/test",
    "src": "./src",
    "doc-generator": "./doc-generator"
  },
  "scripts": {
    "compile": "tsc",
    "dockerBuild": "docker build -t codacy-markdownlint .",
    "generateDocs": "tsc doc-generator/ && node dist/doc-generator/index.js",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "npm run generateDocs",
      "sort-package-json",
      "git add"
    ],
    "src/*.{ts,js,css,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/test/**/*.spec.ts"
  },
  "dependencies": {
    "codacy-seed": "^2.2.0",
    "glob": "^7.1.7",
    "lodash": "^4.17.21",
    "markdownlint": "^0.23.1",
    "node-fetch": "^2.6.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.8",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.33",
    "@types/node-fetch": "^2.5.8",
    "@types/simple-mock": "^0.8.1",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.1",
    "simple-mock": "^0.8.0",
    "ts-node": "^9.1.1"
  }
}
